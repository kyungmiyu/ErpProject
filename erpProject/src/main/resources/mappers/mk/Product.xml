<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.oracle.erpProject.ProductMapper">



	<!-- 제품 리스트 조회  -->
	<select id="productList" resultType="mkProduct">
		select * from product
	</select>
	
	<!-- 제품 상세 조회  -->
	<select id="productDetail" parameterType="mkProduct" resultType="mkProduct">
	<![CDATA[
		select * from product 
		where p_itemcode=${p_itemcode}
		]]>
	</select>
</mapper>